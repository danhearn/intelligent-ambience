{
  "name": "intelligent-ambience",
  "description": "AI-powered ambient music generation system",
  "dockerfile": "Dockerfile",
  "handler": "runpod_handler.py",
  "requirements": "requirements.txt",
  "gpu_types": ["RTX 4090", "RTX 3090", "A100", "A6000"],
  "min_gpu_memory": 8,
  "container_disk_size": 50,
  "volume_mounts": [
    {
      "source": "/workspace/models",
      "destination": "/app/models"
    }
  ],
  "env_vars": {
    "CUDA_VISIBLE_DEVICES": "0",
    "PYTHONUNBUFFERED": "1"
  },
  "ports": [8000],
  "startup_timeout": 300,
  "idle_timeout": 600
}
